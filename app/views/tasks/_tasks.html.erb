<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3 pt-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 170 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <table class="mb-2  table table-striped">
          <thead>
            <tr>
              <th>ステータス</th>
              <th>タスク</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= task.status %></td>
              <td><%= task.content %></td>
            </tr>
          </tbody>
        </table>
        <div>
          <% if current_user == task.user %>
            <%= link_to "詳細", task, class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>